<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/matte_black"
    >

    <TextView
        android:id="@+id/history_inner_Q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/palete_2_3"
        />
    <TextView
        android:id="@+id/history_inner_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer"
        app:layout_constraintTop_toBottomOf="@id/history_inner_Q"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:textSize="18dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/palete_2_2"
        android:paddingBottom="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>