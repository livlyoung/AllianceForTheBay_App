    <ImageView
        android:id="@+id/report_outline"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/title_stuff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/history_outline"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/outline"
        >
    </ImageView>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="@id/report_outline"
        app:layout_constraintRight_toRightOf="@id/report_outline"
        app:layout_constraintTop_toTopOf="@id/report_outline"
        android:layout_marginTop="35dp"
        android:src="@drawable/palete_1_1_report"
        >
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/report_outline"
        app:layout_constraintRight_toRightOf="@id/report_outline"
        app:layout_constraintBottom_toBottomOf="@id/report_outline"
        android:layout_marginBottom="20dp"
        android:text="Report"
        android:fontFamily="@font/poppins_medium"
        android:textSize="28sp"
        android:textColor="@color/palete_2_3"
        >
    </TextView>
    <Button
        android:id="@+id/report_button"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintRight_toRightOf="@id/report_outline"
        app:layout_constraintLeft_toLeftOf="@id/report_outline"
        app:layout_constraintTop_toTopOf="@id/report_outline"
        app:layout_constraintBottom_toBottomOf="@id/report_outline"
        android:text=""
        android:background="@android:color/transparent"
        />


    <ImageView
        android:id="@+id/history_outline"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/report_outline"
        app:layout_constraintTop_toBottomOf="@id/title_stuff"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/outline"
        >
    </ImageView>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintLeft_toLeftOf="@id/history_outline"
        app:layout_constraintRight_toRightOf="@id/history_outline"
        app:layout_constraintTop_toTopOf="@id/history_outline"
        android:layout_marginTop="25dp"
        android:src="@drawable/palete_1_1_history"
        >
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/history_outline"
        app:layout_constraintRight_toRightOf="@id/history_outline"
        app:layout_constraintBottom_toBottomOf="@id/history_outline"
        android:layout_marginBottom="20dp"
        android:text="History"
        android:fontFamily="@font/poppins_medium"
        android:textSize="28sp"
        android:textColor="@color/palete_2_3"
        >
    </TextView>

    <Button
        android:id="@+id/view_previous_forms_button"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintRight_toRightOf="@id/history_outline"
        app:layout_constraintLeft_toLeftOf="@id/history_outline"
        app:layout_constraintBottom_toBottomOf="@id/history_outline"
        app:layout_constraintTop_toTopOf="@id/history_outline"
        android:text=""
        android:background="@android:color/transparent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>